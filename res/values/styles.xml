<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <!-- Two Way View Theme -->
    <style name="TwoWayView">
	    <item name="android:orientation">horizontal</item>
	</style>
	
	<!-- ^ -->
	<style name="InfoRailWindowTitleBackground">
	    <item name="android:background">#FFFFFF</item>
	</style>
    
    <!-- InfoRail Theme -->
    <style name="InfoRailTheme" parent="android:Theme">
        <item name="android:windowBackground">@drawable/inforail_bg</item>
        <item name="android:windowTitleSize">65dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/InfoRailWindowTitleBackground</item>
        <item name="android:textViewStyle">@style/inforail_text</item>
        <item name="android:buttonStyle">@style/train_button</item>
        <item name="android:radioButtonStyle">@style/radio_button</item>
    </style>
    
    
    <!-- Train Button Style -->
    <style name="train_button" parent="@android:style/Widget.Button">
       	<item name="android:layout_width" >fill_parent</item>
	    <item name="android:layout_height" >wrap_content</item>
	    <item name="android:background">@drawable/train_button</item>
	    <item name="android:textColor" >#ffffff</item>
	    <item name="android:gravity" >center</item>
	    <item name="android:layout_margin" >3dp</item>
	    <item name="android:textSize" >30sp</item>
	    <item name="android:textStyle" >bold</item>
	    <item name="android:shadowColor" >#000000</item>
	    <item name="android:shadowDx" >1</item>
	    <item name="android:shadowDy" >1</item>
	    <item name="android:shadowRadius" >2</item>
        
    </style>
    
    <!--  Radio Button Style -->
    <style name="radio_button" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/button_radio</item>
        <item name="android:paddingLeft">50dp</item>
    </style>
    
    <!-- Text Style -->
    <style name="inforail_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
	</style>
	
</resources>
