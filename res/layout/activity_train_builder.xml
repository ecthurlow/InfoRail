<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TrainBuilderActivity" >

    
    
    <LinearLayout
        android:id="@+id/header"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true" >
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/trainBuilder_instructions" />
       
    </LinearLayout>
    
    <RelativeLayout 
        android:id="@+id/trainBuilder_Content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/header"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true" >
        
        <org.lucasr.twowayview.TwoWayView 
		     xmlns:android="http://schemas.android.com/apk/res/android"
		     xmlns:tools="http://schemas.android.com/tools"
		     xmlns:app="http://schemas.android.com/apk/res-auto"
		     android:id="@+id/trainPartCollection"
		     style="@style/TwoWayView"
		     android:layout_width="fill_parent"
		     android:layout_height="100dp"
		     android:layout_marginTop="5dp"
		     android:layout_alignParentBottom="true"
		     android:drawSelectorOnTop="false"
		     android:background="#EEEEEE"
		     tools:context=".MainActivity" >
	     </org.lucasr.twowayview.TwoWayView>
        
        <TextView 
            android:id="@+id/trainBuilder_trainPartsTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/trainPartCollection"
            android:text="@string/trainBuilder_trainPartsTitle" />
        
        <RelativeLayout
            android:id="@+id/buildingArea"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@id/trainBuilder_trainPartsTitle"
            android:background="@drawable/trainbuildingarea_shape" >
            
        </RelativeLayout>
        
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        style="@android:attr/buttonBarStyle" >
        
        <Button android:id="@+id/homeButton" android:layout_width="wrap_content" 
            android:layout_height="wrap_content" android:layout_weight="1" 
            android:text="@string/menu_home"
            android:onClick="goToHome"
            style="@android:attr/buttonBarButtonStyle" />
        
        <Button android:id="@+id/rebuildButton" android:layout_width="wrap_content" 
            android:layout_height="wrap_content" android:layout_weight="1" 
            android:text="@string/button_rebuild"
            style="@android:attr/buttonBarButtonStyle" />
        
        <Button android:id="@+id/trainBuilderButton" android:layout_width="wrap_content" 
            android:layout_height="wrap_content" android:layout_weight="1" 
            android:text="@string/button_play"
            style="@android:attr/buttonBarButtonStyle" />
        
    </LinearLayout>

</RelativeLayout>
