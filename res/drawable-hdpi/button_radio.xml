<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item 
        android:state_checked="true"
        android:state_pressed="false"
        android:drawable="@drawable/radio_checked_up" >
    </item>
    <item 
        android:state_checked="false"
        android:state_pressed="false"
        android:drawable="@drawable/radio_unchecked_up" >
    </item>
    <item 
        android:state_checked="true"
        android:state_pressed="true"
        android:drawable="@drawable/radio_checked_down" >
    </item>
    <item 
        android:state_checked="false"
        android:state_pressed="true"
        android:drawable="@drawable/radio_unchecked_down" >
    </item>

</selector>
